{
  "name": "committed",
  "displayName": "Committed",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:committed.suggestions",
    "onCommand:committed.generateSuggestions"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "committed.generateSuggestions",
        "title": "Committed: Generate Suggestions",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "committed",
          "title": "Committed",
          "icon": "resources/committed.svg"
        }
      ]
    },
    "views": {
      "committed": [
        {
          "id": "committed.suggestions",
          "name": "Committed",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "committed.generateSuggestions",
          "when": "view == committed.suggestions",
          "group": "navigation"
        }
      ],
      "scm/title": [
        {
          "command": "committed.generateSuggestions",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "ollama": "^0.6.3",
    "simple-git": "^3.32.2",
    "zod": "^4.3.6"
  }
}
